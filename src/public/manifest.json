{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Baheth - باحث",
  "version": "1.0.2",
  "description": "تخبرك إن كان المقطع الذي تشاهده متاحاً على منصة باحث.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "46": "icons/46.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*", 
        "https://youtube.com/*",
        "https://www.dailymotion.com/*",
        "https://vimeo.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "46": "icons/46.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "baheth@ieasybooks.com"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "description": "Open Baheth extension popup"
    },
    "check_video": {
      "suggested_key": {
        "default": "Alt+Shift+B"
      },
      "description": "Check if current video is available on Baheth"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
